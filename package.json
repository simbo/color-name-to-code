  "dependencies": {
    "color-name": "^2.0.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^3.7.2",
    "@types/jest": "^29.5.1",
    "@types/node": "^16.18.25",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^4.9.5"
